<Window x:Class="PdmReader.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="TableWindow1"
        Title="TableWindow"
        Width="300"
        Height="300"
        MinWidth="300"
        MinHeight="300"
        KeyDown="TableWindow1_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Name="Tables"
                  Grid.Row="0"
                  HorizontalAlignment="Stretch"
                  MouseDoubleClick="Tables_MouseDoubleClick"
                  MouseEnter="Tables_MouseEnterLeave"
                  MouseLeave="Tables_MouseEnterLeave" />
        <DataGrid Name="Views"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  MouseDoubleClick="Views_MouseDoubleClick" />
    </Grid>
</Window>
