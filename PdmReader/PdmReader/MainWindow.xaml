<Window x:Class="PdmReader.PdmReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MainWindow"
        Title="PdmReader"
        Width="520"
        Height="350"
        MinWidth="520"
        MinHeight="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
            <TextBox Name="Folder"
                     MinWidth="350"
                     MaxWidth="600"
                     HorizontalAlignment="Left"
                     KeyDown="Folder_KeyDown"
                     MouseDoubleClick="Folder_MouseDoubleClick"
                     Text="请选择文件夹..."
                     TextWrapping="Wrap" />
            <Button HorizontalAlignment="Left"
                    Click="Folder_Click"
                    Content="..." />
            <ComboBox Name="SqlCheck">
                <ComboBoxItem>All</ComboBoxItem>
                <ComboBoxItem>Oracle</ComboBoxItem>
                <ComboBoxItem>SqlServer</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <ListBox Name="ListShow"
                 Grid.Row="1"
                 MinHeight="200"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Top"
                 MouseDoubleClick="ListShow_MouseDoubleClick" />
    </Grid>
</Window>
